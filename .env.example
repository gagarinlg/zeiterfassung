# =============================================================================
# Zeiterfassung Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# --- Database ---
DB_USERNAME=zeiterfassung
DB_PASSWORD=change-me-strong-password

# --- JWT Security ---
# Generate with: openssl rand -base64 64
JWT_SECRET=change-me-use-openssl-rand-base64-64-output-here
JWT_ACCESS_EXPIRATION=900000     # 15 minutes in milliseconds
JWT_REFRESH_EXPIRATION=604800000  # 7 days in milliseconds

# --- Super Admin Seed ---
# Password for the default admin@zeiterfassung.local account (change immediately after first login)
SEED_ADMIN_PASSWORD=Admin@123!

# --- Spring Boot ---
SPRING_PROFILES_ACTIVE=production

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# --- Server ---
SERVER_PORT=8080

# --- Email (SMTP) ---
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=change-me-mail-password
MAIL_FROM=noreply@example.com
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true
# Set to false to disable all outgoing emails (useful in development without a mail server)
MAIL_ENABLED=true
